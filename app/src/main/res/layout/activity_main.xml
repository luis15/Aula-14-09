<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:columnCount="2"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.coelh.a14_09_1.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:layout_column="0"
        android:layout_row="0" />
    <EditText
        android:id="@+id/nome"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_height="40dp"
        android:layout_width="100dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado:"
        android:layout_column="0"
        android:layout_row="1" />
    <Spinner
        android:id="@+id/uf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_gravity="fill_horizontal"
        android:entries="@+array/uf"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="2"
        android:layout_gravity="fill_horizontal">
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Conhecimentos:"
                 />
             <CheckBox
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="XML"
                 android:id="@+id/xml"
                 />
             <CheckBox
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Java"
                 android:id="@+id/java"
                 />
             <CheckBox
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="UI"
                 android:id="@+id/ui"
                 />
             <CheckBox
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="UX"
                 android:id="@+id/ux"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Formação:"
                />
            <RadioGroup
                android:id="@+id/formacao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/grad"
                    android:text="Graduando"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mes"
                    android:text="Mestrando"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/doc"
                    android:text="Doutorando"/>
            </RadioGroup>

        </LinearLayout>
    </LinearLayout>
    <Switch
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textOn="Curioso"
        android:textOff="Programador"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:id="@+id/curioso"
        />
    <Button
        android:text="Add Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_gravity="start"
        android:onClick="AddPlayer"
        />
</GridLayout>

